<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:weightSum="100"
        >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginRight="2.5dip"
                android:layout_weight="25"
                android:background="#fff44336"
                android:gravity="center"
                android:text="I"
                android:textColor="#defefffd"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginRight="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:background="#ff2196f3"
                android:gravity="center"
                android:text="III"
                android:textColor="#defff9fc"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/fifth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginRight="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:background="#ffe91e63"
                android:gravity="center"
                android:text="V"
                android:textColor="#defff9fc"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/seventh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginRight="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:background="#ff009688"
                android:gravity="center"
                android:text="VI"
                android:textColor="#defff9fc"
                android:textSize="70dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginLeft="2.5dip"
                android:layout_weight="25"
                android:background="#ff3f51b5"
                android:gravity="center"
                android:text="II"
                android:textColor="#defff9fc"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/fourth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginLeft="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:autoText="false"
                android:background="#fff57c00"
                android:gravity="center"
                android:text="IV"
                android:textColor="#defff9fc"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/sixth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginLeft="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:background="#ff7b1fa2"
                android:gravity="center"
                android:text="VI"
                android:textColor="#defff9fc"
                android:textSize="70dp" />

            <TextView
                android:id="@+id/eighth"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2.5dip"
                android:layout_marginLeft="2.5dip"
                android:layout_marginTop="2.5dip"
                android:layout_weight="25"
                android:background="#ffffab00"
                android:gravity="center"
                android:text="VII"
                android:textColor="#defff9fc"
                android:textSize="70dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>